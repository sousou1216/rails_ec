<%# DBにデータが存在するかどうかで条件分岐 %>
<% if item.persisted? %>
  <%= form_with model: item, url: admin_item_path(item), method: :patch do |f| %>
    <div class="form-group">
      <%= f.label :name, '名前' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :price, '金額' %>
      <%= f.text_field :price, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :discount, '値引き後金額' %>
      <%= f.text_field :discount, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :description, '詳細' %>
      <%= f.text_area :description, class: 'form-control', rows: 10 %>
    </div>
    <%= f.submit '保存', class: 'btn btn-primary' %>
  <% end %>
<% else %>
  <%= form_with model: item, url: admin_items_path do |f| %>
    <div class="form-group">
      <%= f.label :name, '名前' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :price, '金額' %>
      <%= f.text_field :price, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :discount, '値引き後金額' %>
      <%= f.text_field :discount, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :description, '詳細' %>
      <%= f.text_area :description, class: 'form-control', rows: 10 %>
    </div>
    <%= f.submit '保存', class: 'btn btn-primary' %>
  <% end %>
<% end %>
