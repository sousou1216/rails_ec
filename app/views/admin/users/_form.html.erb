<%# DBにデータが存在するかどうかで条件分岐 %>
<% if user.persisted? %>
  <%= form_with model: user, url: admin_user_path(user), method: :patch do |f| %>
    <div class="form-group">
      <%= f.label :name, '名前' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :email, 'メールアドレス' %>
      <%= f.text_field :email, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :password, 'パスワード' %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, 'パスワード（確認）' %>
      <%= f.password_field :passpassword_confirmationword_field, class: 'form-control' %>
    </div>
    <%= f.submit '保存', class: 'btn btn-primary' %>
  <% end %>
<% else %>
  <%= form_with model: user, url: admin_users_path do |f| %>
    <div class="form-group">
      <%= f.label :name, '名前' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :email, 'メールアドレス' %>
      <%= f.text_field :email, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :password, 'パスワード' %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :password_field, 'パスワード（確認）' %>
      <%= f.password_field :password_field, class: 'form-control' %>
    </div>
    <%= f.submit '保存', class: 'btn btn-primary' %>
  <% end %>
<% end %>
